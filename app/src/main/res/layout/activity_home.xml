<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/black"/>

        <LinearLayout
            android:id="@+id/idCameraLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:text="@string/strCamera"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dp30"
                android:textStyle="normal"
                />
            <ImageView
                android:layout_weight=".70"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher"
                android:gravity="left|center"
                />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/black"/>



        <LinearLayout
            android:id="@+id/idGalleryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:text="@string/strGallery"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dp30"
                android:textStyle="normal"
                />
            <ImageView
                android:layout_weight=".70"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_img_gallary"
                android:gravity="left|center"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/black"/>

        <LinearLayout
            android:id="@+id/idCollageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:gravity="right|center"
                android:text="@string/strCollage"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dp30"
                android:textStyle="normal"
                />
            <ImageView
                android:layout_weight=".70"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_collage"
                android:gravity="left|center"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/black"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>